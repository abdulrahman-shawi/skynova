generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(uuid())
  username     String
  email        String      @unique
  phone        String?
  jobTitle     String?
  accountType  AccountType @default(STAFF)
  password     String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  permissionId String?
  orders       Order[]
  permission   Permission? @relation(fields: [permissionId], references: [id])
  customers    Customer[]  @relation("CustomerToUser")
  message      Message[]
}

model Permission {
  id       String @id @default(uuid())
  roleName String

  // المنتجات
  viewProducts   Boolean @default(false)
  addProducts    Boolean @default(false)
  editProducts   Boolean @default(false)
  deleteProducts Boolean @default(false)

  // التقارير
  viewReports   Boolean @default(false)
  addReports    Boolean @default(false)
  editReports   Boolean @default(false)
  deleteReports Boolean @default(false)

  // الطلبات
  viewOrders   Boolean @default(false)
  addOrders    Boolean @default(false)
  editOrders   Boolean @default(false)
  deleteOrders Boolean @default(false)

  // العملاء (تم دمج الفرد والجملة والتقويم في حقل واحد)
  viewCustomers   Boolean @default(false)
  addCustomers    Boolean @default(false)
  editCustomers   Boolean @default(false)
  deleteCustomers Boolean @default(false)

  // الموظفين
  viewEmployees   Boolean @default(false)
  addEmployees    Boolean @default(false)
  editEmployees   Boolean @default(false)
  deleteEmployees Boolean @default(false)

  // المصاريف
  viewExpenses   Boolean @default(false)
  addExpenses    Boolean @default(false)
  editExpenses   Boolean @default(false)
  deleteExpenses Boolean @default(false)

  // إحصائيات النظام
  viewAnalytics Boolean @default(false)

  // تصنيف المنتجات
  viewCategories   Boolean @default(false)
  addCategories    Boolean @default(false)
  editCategories   Boolean @default(false)
  deleteCategories Boolean @default(false)

  // الصلاحيات (لإدارة الأدوار نفسها)
  viewPermissions   Boolean @default(false)
  editPermissions   Boolean @default(false)
  addPermissions    Boolean @default(false)
  deletePermissions Boolean @default(false)

  users User[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  price       Float
  discount    Float?         @default(0)
  description String?
  quantity    String?
  categoryId  Int?
  createdAt   DateTime       @default(now())
  orderItems  OrderItem[]
  category    Category?      @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  type      String
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Customer {
  id          String    @id @default(uuid())
  name        String    @unique
  phone       String[]
  countryCode String?
  country     String?
  status      String?
  phonestatus String?
  gender      String?
  age         String?
  source      String?
  city        String?
  rating      Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      Order[]
  users       User[]    @relation("CustomerToUser")
  message     Message[]
}

model Message {
  id         String   @id @default(uuid())
  message    String?
  customerId String
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id              Int         @id @default(autoincrement())
  orderNumber     String      @unique
  totalAmount     Float
  discount        Float       @default(0)
  finalAmount     Float
  paymentMethod   String
  receiverName    String?
  receiverPhone   String[]
  country         String?
  city            String?
  municipality    String?
  fullAddress     String?
  deliveryNotes   String?
  googleMapsLink  String?
  amount          String?
  amountBank      String?
  deliveryMethod  String?
  additionalNotes String?
  status          String      @default("PENDING")
  customerId      String
  userId          String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  customer        Customer    @relation(fields: [customerId], references: [id])
  user            User?       @relation(fields: [userId], references: [id])
  items           OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int     @default(1)
  price     Float
  discount  Float
  orderId   Int
  productId Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}

enum AccountType {
  ADMIN
  MANAGER
  STAFF
}
